" Raghav Subramaniam
" .vimrc

" colors
colorscheme apprentice

" general settings
set hlsearch
set incsearch
set ignorecase
set smartcase
set autoindent
set expandtab
set shiftwidth=4
set softtabstop=4
set autoread
set backspace=2
set hidden
set laststatus=2
set number
set wildmenu
set nobackup
set noerrorbells
set noswapfile
set notitle

" minpac setup
packadd minpac
call minpac#init()
call minpac#add('k-takata/minpac', {'type': 'opt'})

" color plugin
call minpac#add('romainl/apprentice')

" general plugins
call minpac#add('tpope/vim-commentary')
call minpac#add('tpope/vim-repeat')
call minpac#add('tpope/vim-surround')
call minpac#add('tpope/vim-unimpaired')

" ag plugin
call minpac#add('raghavsub/vim-agate')

" git plugins
call minpac#add('airblade/vim-gitgutter')
call minpac#add('tpope/vim-fugitive')

" ctags setup
set tags=tags;

" status line
set statusline=%m\ %f%=buf:%-3ncol:%-3c%y

" easy escape
inoremap jj <ESC>

" jk macros
nnoremap j gj
nnoremap k gk
nnoremap gj j
nnoremap gk k

" fast buffer toggle
nnoremap <space><space> :e#<CR>

" clear searches
nnoremap <space>/ :nohlsearch<CR>
