# .config/dunst/dunstrc

[global]
    font = Roboto 12

    allow_markup = yes
    format = "<b>%s</b>\n%b"

    geometry = "480x3-0-0"
    alignment = right
    line_height = 0
    separator_height = 0
    padding = 0
    horizontal_padding = 6
    
    ignore_newline = no
    word_wrap = yes 

    show_indicators = no

    dmenu = /usr/bin/rofi -dmenu -p dunst:
    browser = /usr/bin/firefox -new-tab

[frame]
    width = 0

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space

[urgency_low]
    background = "#343646"
    foreground = "#c0c5ce"

[urgency_normal]
    background = "#343d46"
    foreground = "#c0c5ce"

[urgency_critical]
    background = "#bf616a"
    foreground = "#c0c5ce"
