# Raghav Subramaniam
# .gitconfig

[log]
    date = short

[format]
    pretty = format:"%C(yellow)%h %Cred%ad %Cblue%an%Cgreen%d %Creset%s"

[alias] 
    l = log -n 20
    ll = log

    a = add
    aa = add -A

    c = commit --verbose
    cam = commit -a -m
    amend = commit --amend
    
    d = diff
    ds = diff --stat
    
    s = status

    co = checkout
    cob = checkout -b

    br = branch

    unstage = reset HEAD

[color]
    ui = true

